<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/primary"
    tools:context=".DetailScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Date + Edit Button -->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="359dp"
            android:layout_height="103dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/display_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/la_belle_aurore"
                android:text="Date"
                android:textColor="@color/white"
                android:textSize="48sp" />

            <ImageButton
                android:id="@+id/display_edit"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_button"
                android:contentDescription="Edit Button"
                android:scaleType="centerInside"
                android:src="@drawable/baseline_edit_24" />
        </LinearLayout>

        <!-- Image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/display_image"
            android:layout_width="352dp"
            android:layout_height="199dp"
            android:layout_margin="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:shapeAppearanceOverlay="@style/ImageTopRound" />

        <!-- Title -->
        <TextView
            android:id="@+id/display_title"
            android:layout_width="334dp"
            android:layout_height="69dp"
            android:layout_margin="16dp"
            android:fontFamily="@font/la_belle_aurore"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/display_image" />

        <!-- Description -->
        <TextView
            android:id="@+id/display_desc"
            android:layout_width="342dp"
            android:layout_height="265dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/la_belle_aurore"
            android:text="Description\n\nLorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. ... (long text here)"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/display_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
